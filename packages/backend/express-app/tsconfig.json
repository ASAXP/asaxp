{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@asaxp/types": ["../../libs/types/src"],
      "@config/*": ["src/config/*"],
      "@controller/*": ["src/controller/*"],
      "@database/*": ["src/database/*"],
      "@domain/*": ["src/domain/*"],
      "@middleware/*": ["src/middleware/*"],
      "@repository/*": ["src/repository/*"],
      "@routes/*": ["src/routes/*"],
      "@utils/*": ["src/utils/*"]
    },
    "allowJs": true,
    "outDir": "./dist",
    "composite": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "skipLibCheck": true
  },
  "references": [{ "path": "../../libs/types" }]
}
